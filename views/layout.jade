doctype html
html(lang="en")
  head
    title= title
    link(href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet")
    link(href="/lib/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet")
    link(href="/css/site.css" rel="stylesheet")     
  body
    div(class="navbar navbar-default navbar-fixed-top" role="navigation")
      div(class="container")
        div(class="navbar-header")
          button(class="btn btn-success navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse")
            span(class="glyphicon glyphicon-chevron-down")
          div(id="logo")
            a(href='/')
            if user
              div user.name
        div(class="navbar-collapse collapse")
          ul(class="nav navbar-nav navbar-right")
            li(class="nav")
              a(href="/help") Help
            li(class="nav")
    section(id="body" class="container")
      div(class="page-header")
        h1(style="margin: 0px 0px 35px 0px")= title  
      block body  
    hr  
    footer(class="container")              
    script(src="/lib/jquery/jquery.min.js")
    script(src="/lib/bootstrap/dist/js/bootstrap.min.js")
    script(src="/lib/angular/angular.min.js")
    script(src="/lib/angular-bootstrap/ui-bootstrap.min.js")
    block scripts

              
              
